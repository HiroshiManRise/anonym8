#!/bin/bash

	export BLUE='\033[1;94m'
	export GREEN='\033[1;92m'
	export RED='\033[1;91m'
	export RESETCOLOR='\033[1;00m'

	anonym8 wipe
	sleep 3
	anonym8 start_mac
	sleep 3
	anonym8 start_polipo
	sleep 2
	anonym8 start_privoxy
	sleep 2
	anonym8 start
	sleep 25
	anonym8 status_ip
	sleep 3
	updatedb
	
	if [ -f /usr/share/anonym8/banner.sh ] ; then
		
		/bin/bash /usr/share/anonym8/banner.sh
	fi
	
	if [ -f /usr/share/anonym8/helpers.sh ] ; then
		
		/bin/bash /usr/share/anonym8/helpers.sh
	fi

	
